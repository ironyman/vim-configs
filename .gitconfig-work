[user]
name = ironyman
email = ironyman@users.noreply.github.com

[merge]
    tool = nvim -d
[alias]
    c = commit
    s = status
    st = status
    lg = log --oneline
    last = log -1 HEAD
    f = push --force-with-lease
    # https://stackoverflow.com/a/11688523/472927
    ss = "!f() { git stash show stash^{/$*} -p; }; f"
    sa = "!f() { git stash apply stash^{/$*}; }; f"
    sl = stash list
[push]
    default = simple
[help]
    autocorrect = 1
[url "git.launchpad.net"]
    insteadOf = lp:
[url "git@g.csail.mit.edu:"]
    insteadOf = g:
[url "git@github.com:"]
    insteadOf = gh:
[github]
    user = ironyman
